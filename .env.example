# MediVision AI - Environment Configuration
# Copy this file to .env and fill in the values

# ============================================
# Application Settings
# ============================================
PROJECT_NAME=MediVision AI
DEBUG=true
API_VERSION=v1
PORT=8000

# ============================================
# Security
# ============================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET_KEY=your-super-secret-refresh-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# Database
# ============================================
POSTGRES_USER=medivision
POSTGRES_PASSWORD=medivision_dev
POSTGRES_DB=medivision
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://medivision:medivision_dev@localhost:5432/medivision

# ============================================
# Redis
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# ============================================
# File Storage
# ============================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=536870912  # 512MB
ALLOWED_EXTENSIONS=dcm,dicom,png,jpg,jpeg,mp4,avi,wav,mp3

# ============================================
# AI Models
# ============================================
MODEL_DIR=./models
CT_MODEL_PATH=./models/medivision_swin_ct.pth
US_MODEL_PATH=./models/medivision_vit_us.pth
CLIP_MODEL_PATH=./models/medivision_clip.pth
LLM_MODEL_NAME=mistralai/Mistral-7B-Instruct-v0.2
WHISPER_MODEL_SIZE=medium

# Inference Settings
INFERENCE_BATCH_SIZE=8
MAX_INFERENCE_WORKERS=4
DEVICE=cuda  # or cpu

# ============================================
# CORS
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_DIR=./logs

# ============================================
# External Services (Optional)
# ============================================
# OPENAI_API_KEY=your-openai-api-key
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# S3_BUCKET=your-s3-bucket

# ============================================
# Monitoring (Optional)
# ============================================
# SENTRY_DSN=your-sentry-dsn
# PROMETHEUS_PORT=9090
